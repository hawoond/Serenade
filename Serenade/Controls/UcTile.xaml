             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Serenade.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30" Padding="0.5">
    <Grid x:Name="grTile" Height="30" Width="30" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="grTile_MouseDown">
        <Label x:Name="lbTileName" VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="sample" FontSize="5"></Label>
