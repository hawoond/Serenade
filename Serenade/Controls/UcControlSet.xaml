<UserControl x:Class="Serenade.Controls.UcControlSet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Serenade.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="520">
    <Grid Background="#dddddd">
        <StackPanel Orientation="Vertical">
            <Button x:Name="btnTest" Width="60" Content="test" Click="Button_Click"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="가로 : "/>
                <TextBox x:Name="tbInputX" Width="120"/>
                <Label Content="세로 : " Margin="50,0,0,0"/>
                <TextBox x:Name="tbInputY" Width="120"/>
                <Button Width="60" Margin="60,0,0,0" Content="적용" Click="Button_Click_1"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="X : "/>
                <Label x:Name="lbInputX" Width="auto"/>
                <Label Content="Y : " Margin="50,0,0,0"/>
                <Label x:Name="lbInputY" Width="auto"/>
            </StackPanel>

            <WrapPanel x:Name="wpTileList" Width="auto" HorizontalAlignment="Center">
            </WrapPanel>
        </StackPanel>
    </Grid>

</UserControl>
